 <div id="article">
<h1>New Article</h1>

<% @article.errors.full_messages.each do |msg| %>
  <p><%= msg %></p>
<% end %>

<!-- Creates a POST request to "/users" -->
<%= form_for @article, :url => "/articles" do |f| %>

   <%= f.label :title %>
   <%= f.text_field :title %>
 
   <%= f.label :body %>
   <%= f.text_field :body %>

  <%= f.submit %>

<% end %>

<p><%= link_to 'Go Home', root_path %></p>
</div>