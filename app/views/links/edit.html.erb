<h1>Edit Link</h1>

<% @existing_link.errors.full_messages.each do |msg| %>
  <p><%= msg %></p>
<% end %>

<!-- Creates a PUT request to "/users/1/edit" -->
<%#= form_for(@existing_recruit, :as => "user", :url => user_path(@existing_recruit.id), :method => "put") ... %>

<%= form_for (@existing_link), :url => "/link/#{@existing_link.id}" do |f| %>

   <%= f.label :name %>
   <%= f.text_field :name %>
 
   <%= f.label :url %>
   <%= f.text_field :url %>
  
  <%= f.submit %>

<% end %>